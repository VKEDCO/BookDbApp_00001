<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vkedco.mobappdev.sufipoetrybooksdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name=".SufiPoetryBooksDBApp">
        <activity
            android:name="org.vkedco.mobappdev.sufipoetrybooksdb.SufiPoetryBooksDBMainAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="org.vkedco.mobappdev.sufipoetrybooksdb.SufiPoetryBooksDBInserter"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.sufi_poetry_db_insert_book" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="org.vkedco.mobappdev.sufipoetrybooksdb.SufiPoetryBooksDBDeleter"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.sufi_poetry_db_delete_book" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
